{
  "manifest_version": 3,
  "name": "Upwork AI Assistant (Live Collector)",
  "version": "1.2.0",
  "description": "Siz Upwork'te gezinirken iş ilanlarını arka planda otomatik olarak toplar ve analiz için hazırlar.",
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://*.upwork.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.upwork.com/nx/find-work/*",
        "https://*.upwork.com/ab/jobs/search/*",
        "https://*.upwork.com/nx/search/jobs/*",
        "https://*.upwork.com/jobs/*",
        "https://*.upwork.com/freelancers/job-search*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected-script.js"],
      "matches": ["https://*.upwork.com/*"]
    }
  ],
  "action": {
    "default_title": "Upwork AI Assistant",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

